---
import CommonHead from "../components/commons/CommonHead.astro";
import {
  screenTransition,
  screenTransitionBack,
} from "../lib/screenTransition.mjs";
import "../styles/global.css";
import "../styles/screenAnimation.css";

interface Props {
  currentLang: string;
}
const { currentLang } = Astro.props;

const isHome = Astro.url.pathname === `/${currentLang}`;
const activeTransition = isHome ? screenTransitionBack : screenTransition;
---

<!doctype html>
<html
  lang={currentLang}
  transition:name="root"
  transition:animate={activeTransition}
  class="scroll-smooth"
>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <CommonHead />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-3GFXE31GD8"
    ></script><script is:inline>
      // Inicialización global de dataLayer y la función gtag
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      // Configuración del seguimiento con el ID de medición inyectado por Astro.
      // Astro reemplazará {GA4_TRACKING_ID} con el valor de la variable de entorno.
      gtag("config", "{GA4_TRACKING_ID}");
    </script></head
  >

  <body class="bg-foreground text-principal noise-container">
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
  }

  .noise-container {
    position: relative;
    color: white;
    text-align: center;
  }

  .noise-container::after {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;

    background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><filter id="a" x="0" y="0" width="100%" height="100%"><feTurbulence baseFrequency=".2"/></filter><rect width="100%" height="100%" filter="url(%23a)"/></svg>');
    opacity: 0.06;

    animation: noiseAnimation 0.2s infinite linear;
    pointer-events: none;
  }

  @keyframes noiseAnimation {
    0% {
      transform: translate(0, 0);
    }
    10% {
      transform: translate(0, -5%);
    }
    20% {
      transform: translate(0, -10%);
    }
    30% {
      transform: translate(0, -5%);
    }
    40% {
      transform: translate(0, -5%);
    }
    50% {
      transform: translate(0, -10%);
    }
    60% {
      transform: translate(0, -15%);
    }
    70% {
      transform: translate(0, 0);
    }
    80% {
      transform: translate(0, -15%);
    }
    90% {
      transform: translate(0, -10%);
    }
    100% {
      transform: translate(0, -5%);
    }
  }
</style>
