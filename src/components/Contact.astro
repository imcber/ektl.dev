---

<section id="contact" class="pt-20 md:pt-28 bg-foreground text-principal">
  <div class="container mx-auto px-6 max-w-2xl text-center">
    <h2 class="text-4xl md:text-5xl font-bold mb-5 text-principal">
      {touch}
    </h2>

    <p class="text-lg text-secondary_light mb-10 max-w-xl mx-auto">
      {description}
    </p>

    <a
      href={resumePath}
      download={`Bernardo${resumePath}`}
      class="inline-block bg-secondary text-principal font-semibold py-3 px-8 rounded-lg shadow-lg
             focus:outline-none focus:ring-2 focus:principal focus:ring-offset-2
             transition-all duration-300 ease-in-out
             transform hover:-translate-y-2"
    >
      {resume}
    </a>

    <div
      class="mt-16 mb-12 border-t border-principal max-w-xs mx-auto"
      aria-hidden="true"
    >
    </div>

    <div class="flex justify-center gap-8">
      {
        social.map((social) => (
          <a
            href={social.url}
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.title}
            class="text-principal transition-all duration-300 transform hover:scale-150"
          >
            <svg
              class="w-7 h-7"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d={iconPaths[social.title]}
                clip-rule="evenodd"
              />
            </svg>
          </a>
        ))
      }
    </div>
    <p class="text-sm text-secondary_light mt-10 max-w-xl mx-auto">
      ekatl.ramirez@gmail.com
    </p>
  </div>
</section>
