---
import ProjectCard from "./ProjectCard.astro";

export interface Project {
  id: string;
  name: string;
  about: string;
  task: string;
  year: string;
  rol: string;
  url: string;
  tags: string[];
}

interface ProjectsEntries {
  title_page: string;
  title_year: string;
  title_rol: string;
  title_about: string;
  title_task: string;
  work: Project[];
}

interface Props {
  projectsEntries: ProjectsEntries;
}

const { projectsEntries } = Astro.props;
---

<div class="w-full px-4 md:px-7 py-10">
  <div
    class="w-full lg:w-1/3 flex items-start justify-center lg:justify-start lg:px-20"
  >
    <p class="text-5xl font-extrabold mb-2">
      {projectsEntries.title_page}
    </p>
  </div>
  <div class="w-full flex justify-center items-center py-5">
    <div
      class="w-full grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 transition-all duration-200 px-3 md:p-0 max-w-7xl"
    >
      {
        projectsEntries?.work.map((project) => (
          <ProjectCard project={project} />
        ))
      }
    </div>
  </div>
</div>
