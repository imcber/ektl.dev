---
export interface Tech {
  id: string;
  name: string;
  experience: number;
  skill: string;
}

interface Props {
  techs: Tech[];
}

const { techs } = Astro.props;

const getSkillPercentage = (skill: Tech["skill"]): number => {
  switch (skill) {
    case "advanced":
      return 90;
    case "medium":
      return 65;
    case "beginner":
      return 35;
    default:
      return 0;
  }
};
---

<div class="grid grid-cols-2 md:grid-cols-4 gap-4 md:gap-6 py-4">
  {
    techs.map(({ name, experience, skill }) => {
      const percentage = getSkillPercentage(skill);
      return (
        <div class="relative flex flex-col justify-between overflow-hidden rounded-2xl border border-secondary  p-5 text-principal shadow-lg transition-all duration-300 hover:border-principal_light hover:shadow-xl hover:shadow-principal_light/20">
          <h2 class="text-2xl md:text-4xl font-extrabold mb-5 text-principal_light text-start">
            {name}
          </h2>

          <div class="space-y-2 text-sm text-secondary_light">
            <div class="flex justify-between items-center">
              <span class="font-medium">Experiencia:</span>
              <span class="font-bold text-base text-principal">
                {`${experience} aÃ±os`}
              </span>
            </div>
          </div>

          <div class="mt-4">
            <div class="flex justify-between items-center mb-1">
              <span class="font-medium text-sm text-secondary_light">Habilidad:</span>
              <span
                class="font-bold uppercase text-xs tracking-widest"
                class:list={[
                  { "text-green-400": skill === "advanced" },
                  { "text-yellow-400": skill === "medium" },
                  { "text-red-400": skill === "beginner" },
                ]}
              >
                {skill}
              </span>
            </div>

            <div class="w-full bg-gray-700 rounded-full h-2.5">
              <div
                class="h-2.5 rounded-full transition-all duration-700 ease-out"
                style={`width: ${percentage}%;`}
                class:list={[
                  { "bg-green-500": skill === "advanced" },
                  { "bg-yellow-500": skill === "medium" },
                  { "bg-red-500": skill === "beginner" },
                ]}
              />
            </div>
          </div>
        </div>
      );
    })
  }
</div>
