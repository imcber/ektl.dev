---
import { Image } from "astro:assets";
import linkArrow from "../../assets/common/right-arrow-principal-color.svg";
import Background3D from "./Background3D.astro";
import Tooltip from "./Tooltip.astro";

interface Greetings {
  hello: string;
  name: string;
  rest: string;
  alias: string;
  tooltip: string;
  profile: string;
  projects: string;
  about: string;
  contact: string;
}

interface Props {
  greetings: Greetings;
  currentLang: string;
}

const {
  greetings: {
    hello,
    name,
    rest,
    alias,
    profile,
    projects,
    about,
    tooltip,
    contact,
  },
  currentLang
} = Astro.props;
---

<section id="welcome" class="flex min-h-screen relative overflow-hidden z-0">
  <Background3D />
  <div class="w-full flex flex-col z-10 p-7 lg:p-14">
    <section id="hero" class="flex flex-col justify-center items-center h-full">
      <h1
        class="text-5xl my-3 text-center text-transparent lg:text-6xl leading-16 lg:leading-normal"
      >
        <span class="stroke">{hello}</span>
        <span class="text-principal font-bold">{name}</span>
        <span class="stroke">{rest}</span>
        <span class="text-principal font-bold">
          <Tooltip text={alias} tooltip={tooltip} />
        </span>
      </h1>

      <h2
        class="text-2xl text-principal w-2/3 lg:w-2/6 text-center font-bold my-4"
      >
        {profile}
      </h2>

      <div
        class="text-xl my-16 text-principal text-center w-full lg:w-2/6 flex justify-center"
      >
        <a
          class="cursor-pointer flex mx-3 font-bold md:text-2xl xl:text-3xl"
          href={`${currentLang}/projects`}
        >
          <Image src={linkArrow} class="md:w-8 xl:w-10" alt="arrow_projects" />
          <span>{projects}</span>
        </a>
        <a href={`${currentLang}/about-me`}>
          <span
            class="cursor-pointer flex mx-3 font-bold md:text-2xl xl:text-3xl"
          >
            <Image
              src={linkArrow}
              class="md:w-8 xl:w-10"
              alt="arrow_about_me"
            />
            <span>{about}</span>
          </span>
        </a>
      </div>
      <div
        class="text-xl text-principal text-center w-full lg:w-2/6 flex justify-center"
      >
        <a
          class="cursor-pointer flex mx-3 font-bold md:text-2xl xl:text-3xl"
          href="#contact"
        >
          <Image src={linkArrow} class="md:w-8 xl:w-10" alt="arrow_contact" />
          <span>{contact}</span>
        </a>
      </div>
    </section>
  </div>
</section>

<style>
  .stroke {
    -webkit-text-stroke: 2px var(--principal);
  }
</style>
