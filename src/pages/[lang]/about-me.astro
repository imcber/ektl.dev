---
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import AboutMeComponent from "../../components/About/AboutMe.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const pages = await getCollection("aboutMe");

  const paths = pages.map((page) => {
    const [lang] = page.id.split("/");
    return { params: { lang }, props: { page } };
  });

  return paths;
}

interface Props {
  page: CollectionEntry<"aboutMe">;
}

const { lang } = Astro.params;
const { page } = Astro.props;
---

<Layout currentLang={lang}>
  <Header currentLang={lang} showBackButton isDarkmode />
  <AboutMeComponent aboutMe={page.data} />
</Layout>
