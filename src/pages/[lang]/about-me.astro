---
import Header from "../../components/Header.astro";
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const pages = await getCollection("aboutMe");

  const availableLangs = pages.map((page) => page.id.split("/")[0]);

  const paths = pages.map((page) => {
    const [lang] = page.id.split("/");
    return { params: { lang }, props: { page, availableLangs } };
  });

  return paths;
}

interface Props {
  page: CollectionEntry<"aboutMe">;
  availableLangs: string[];
}

const { lang } = Astro.params;
const { page, availableLangs } = Astro.props;
---

<Layout>
  <Header currentLang={lang} availableLangs={availableLangs} />
  <p>{page.data.hello}</p>
</Layout>
