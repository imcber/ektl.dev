---
import Contact from "../../components/Contact.astro";
import Header from "../../components/Header.astro";
import Welcome from "../../components/Home/Welcome.astro";
import Layout from "../../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const pages = await getCollection("home");

  const paths = pages.map((page) => {
    const [lang] = page.id.split("/");
    return { params: { lang }, props: { page } };
  });

  return paths;
}

interface Props {
  page: CollectionEntry<"home">;
}

const { lang } = Astro.params;
const { page } = Astro.props;
---

<Layout currentLang={lang}>
  <Header currentLang={lang} />
  <Welcome greetings={page.data.greetings} currentLang={lang} />
  <Contact contact={page.data.contact} resumePath={`/ektl.dev/resume/${lang}.pdf`} />
</Layout>
